{% macro priority_label(priority, text) %}
    {% spaceless %}
        {% if priority == 'low' %}
            <span class="label label-info ticket-label-priority"><i class="fa fa-arrow-down"></i>{{ text |trans }}</span>
        {% elseif priority == 'medium' %}
            <span class="label label-warning ticket-label-priority"><i
                        class="fa fa-arrow-up"></i> &nbsp;{{ text|trans }}</span>
        {% else %}
            <span class="label label-danger ticket-label-priority"><i class="fa fa-arrow-up"></i> &nbsp;{{ text|trans }}</span>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% macro priority_alert(user, priority, text) %}
