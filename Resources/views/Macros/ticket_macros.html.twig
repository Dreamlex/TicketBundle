{% macro status_label(status, text) %}
    {% spaceless %}
        {% if status == 'open' %}
            <span class="label label-success ticket-label"><i
                        class="fa fa-folder-open"></i>&nbsp;{{ text|trans }}</span>
        {% elseif status == 'in_progress' %}
            <span class="label label-info ticket-label"><i class="fa fa-folder-open"></i>&nbsp;{{ text|trans }}</span>
        {% elseif status == 'information_requested' %}
            <span class="label label-info ticket-label"><i class="fa fa-folder-open"></i>&nbsp;{{ text|trans }}</span>
        {% elseif status == 'on_hold' %}
            <span class="label label-info ticket-label"><i class="fa fa-folder-open"></i>&nbsp;{{ text|trans }}</span>
        {% elseif status == 'resolved' %}
            <span class="label label-success ticket-label"><i
                        class="fa fa-folder-open"></i>&nbsp;{{ text|trans }}</span>
        {% elseif status == 'closed' %}
            <span class="label label-danger ticket-label"><i
                        class="fa fa-folder-close"></i>&nbsp;{{ text|trans }}</span>
        {% endif %}
    {% endspaceless %}
{% endmacro %}
