{% extends 'DreamlexTicketBundle:Ticket:layout.html.twig' %}

{% block content %}
    <h1>{{ 'ticket.label.ticket_create'|trans }}</h1>

    {{ form_errors(form) }}
    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
    {{ form_row(form.category)}}
    {{ form_row(form.subject) }}
    {{ form_row(form.messages.0.message) }}
    {{ form_row(form.messages.0.media) }}
    {{ form_row(form.messages.0.priority) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-primary" id="submit">{{ 'ticket.button.create_ticket'|trans }}</button>
            <a href="{{ path('ticket.ticket.index') }}"
               class="btn btn-default">{{ 'ticket.button.back_to_list'|trans }}</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

